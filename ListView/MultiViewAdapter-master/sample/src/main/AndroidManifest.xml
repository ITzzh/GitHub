<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ahamed.sample">

  <application
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">
    <activity android:name=".SampleActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:name=".simple.SimpleAdapterActivity"
        android:label="@string/label_simple_adapter"/>
    <activity
        android:name=".grid.GridAdapterActivity"
        android:label="@string/label_simple_grid"/>
    <activity
        android:name=".multilist.MultiListActivity"
        android:label="@string/label_multi_set"/>
    <activity
        android:name=".data.binding.DataBindingActivity"
        android:label="@string/label_data_binding"/>
    <activity
        android:name=".contextual.action.mode.ContextualActionModeActivity"
        android:label="@string/label_action_mode"/>
    <activity
        android:name=".complex.ComplexListActivity"
        android:label="@string/label_complex"/>
    <activity
        android:name=".swipetodismiss.SwipeToDismissActivity"
        android:label="@string/label_swipe_to_dismiss"/>
    <activity
        android:name=".infinite.scroll.InfiniteScrollActivity"
        android:label="@string/label_infinite"/>
    <activity
        android:name=".expandable.item.ExpandableItemActivity"
        android:label="@string/label_expandable_item"/>
    <activity
        android:name=".expandable.group.ExpandableGroupActivity"
        android:label="@string/label_expandable_group"/>
    <activity
        android:name=".selectable.adapter.SelectionModeActivity"
        android:label="@string/label_selection"/>
    <activity
        android:name=".drag.and.drop.DragAndDropActivity"
        android:label="@string/label_drag_drop"/>
    <activity
        android:name=".payload.PayloadActivity"
        android:label="@string/label_payload"/>
  </application>

</manifest>